@{
    ViewData["Title"] = "Home";
}

<div class="card">
    <h2 class="text-center mb-4">Shorten Your Link</h2>
    <form asp-action="Shorten" method="post">
        <div class="mb-3">
            <label for="url" class="form-label">Enter URL</label>
            <input type="url" class="form-control" id="url" name="originalUrl" placeholder="https://example.com" required />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Shorten</button>
        </div>
    </form>

    @if (ViewBag.ShortUrl != null)
    {
        <div class="alert alert-success mt-4 text-center">
            <p>Your short URL is:</p>
            <input type="text" class="form-control text-center" value="@ViewBag.ShortUrl" id="shortUrl" readonly />
            <div class="mt-2">
                <button class="btn btn-success me-2" onclick="copyToClipboard()">Copy</button>
                <a href="@ViewBag.ShortUrl" target="_blank" class="btn btn-primary">Go</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            var copyText = document.getElementById("shortUrl");
            navigator.clipboard.writeText(copyText.value).then(() => {
                alert("Copied to clipboard!");
            });
        }
    </script>
}
